<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>eu.europeana.metis</groupId>
    <artifactId>metis-framework</artifactId>
    <packaging>pom</packaging>
    <version>1.0-SNAPSHOT</version>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <source>1.8</source>
                    <target>1.8</target>
                    <testSource>1.8</testSource>
                    <testTarget>1.8</testTarget>
                </configuration>
            </plugin>
        </plugins>
    </build>
    <modules>
        <module>metis-core</module>
        <module>metis-hierarchies</module>
        <module>metis-dereference</module>
        <module>metis-redirect</module>
        <module>metis-identifiers</module>
        <module>metis-validation</module>
        <module>metis-pandora</module>
    </modules>
    <repositories>
        <repository>
            <id>libs-release-local</id>
            <name>artifactory.eanadev.org-releases</name>
            <url>http://artifactory.eanadev.org/artifactory/libs-release-local</url>
            <snapshots>
                <enabled>false</enabled>
            </snapshots>
        </repository>
        <!-- Europeana Labs UIM external libraries repository -->
        <repository>
            <id>artifactory.eanadev.org</id>
            <name>artifactory.eanadev.org-releases</name>
            <url>http://artifactory.eanadev.org/artifactory/ext-release-local</url>
            <snapshots>
                <enabled>false</enabled>
            </snapshots>
        </repository>

        <repository>
            <id>ext-snapshots-local</id>
            <name>artifactory.eanadev.org-snapshot</name>
            <url>http://artifactory.eanadev.org/artifactory/ext-snapshot-local</url>
            <releases>
                <enabled>false</enabled>
            </releases>
        </repository>

        <!-- Europeana Labs Java.net Maven 2 Repository (mirror) -->
        <repository>
            <id>maven2-repository.dev.java.net</id>
            <name>Java.net Maven 2 Repository (mirror)</name>
            <url>http://artifactory.eanadev.org/artifactory/java.net.m2</url>
        </repository>


        <!-- Europeana Labs UIM releases repository -->
        <repository>
            <id>uim-releases-local</id>
            <name>UIM Releases Repository</name>
            <snapshots>
                <enabled>false</enabled>
            </snapshots>
            <url>http://artifactory.eanadev.org/artifactory/uim-releases-local</url>
        </repository>


        <!-- Europeana Labs Core snapshot libraries -->
        <repository>
            <id>artifactory.eanadev.org.corelibs.eu.snapshot</id>
            <name>artifactory.eanadev.org.libs-snapshot-local</name>
            <url>http://artifactory.eanadev.org/artifactory/libs-snapshot-local</url>
            <releases>
                <enabled>false</enabled>
            </releases>
        </repository>
    </repositories>

    <properties>
        <version.spring>4.2.5.RELEASE</version.spring>
        <version.junit>4.12</version.junit>
        <version.log4j>1.2.17</version.log4j>
        <version.embeddedMongo>1.48.2</version.embeddedMongo>
        <version.commonsio>2.4</version.commonsio>
        <version.commonslang>2.6</version.commonslang>
        <version.gson>2.2.1</version.gson>
        <version.openstack>1.9.0</version.openstack>
        <version.swagger>2.3.1</version.swagger>
        <version.jackson>2.6.5</version.jackson>
        <version.powermock>1.6.4</version.powermock>
        <version.mockito>1.10.19</version.mockito>
        <version.corelib>2.3-SNAPSHOT</version.corelib>
        <version.servletapi>3.1.0</version.servletapi>
        <version.commons-fileupload>1.3</version.commons-fileupload>
        <version.morphia>1.1.1</version.morphia>
        <version.xsom>20140925</version.xsom>
        <version.commonscompress>1.11</version.commonscompress>
        <version.springSecurity>3.2.8.RELEASE</version.springSecurity>
        <version.springLdap>2.1.0.RELEASE</version.springLdap>
    </properties>

</project>